@page "/brandAdd"
@rendermode InteractiveServer
@using BlazorApp.Models
@using Service
@inject IService<Brand> dataRepository
@inject NavigationManager Navigation

<h3>@(IdBrand.HasValue ? "Modifier une marque" : "Ajouter une marque")</h3>

@if (isLoading)
{
    <p><em>Chargement...</em></p>
}
else
{
    <EditForm Model="brand" OnValidSubmit="HandleValidSubmit" FormName="brandForm">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <!-- Nom -->
        <div class="mb-3">
            <label for="BrandName" class="form-label">Nom de la marque</label>
            <InputText id="BrandName" class="form-control" @bind-Value="brand.Name" />
        </div>

        <button type="submit" class="btn btn-primary">Enregistrer</button>
        <button type="button" class="btn btn-secondary ms-2" @onclick="Retour">Annuler</button>
    </EditForm>
}

@code {
    [Parameter]
    public int? IdBrand { get; set; }

    private Brand brand = new();
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        if (IdBrand.HasValue)
        {
            var existingBrand = await dataRepository.GetByIdAsync(IdBrand.Value);
            if (existingBrand != null)
            {
                brand = existingBrand;
            }
        }
        isLoading = false;
    }

    private async Task HandleValidSubmit()
    {
        if (IdBrand.HasValue)
        {
            await dataRepository.UpdateAsync(brand);
        }
        else
        {
            await dataRepository.AddAsync(brand);
        }

        Navigation.NavigateTo("/brands");
    }

    private void Retour()
    {
        Navigation.NavigateTo("/brands");
    }
}
