@page "/typeProductEdit/{IdTypeProduct:int?}"
@rendermode InteractiveServer
@using BlazorApp.Models
@using Service
@inject IService<TypeProduct> dataRepository
@inject IService<Product> dataRepositoryProduct
@inject NavigationManager Navigation

<h3>Modifier le type de produit</h3>

@if (isLoading)
{
    <p><em>Chargement...</em></p>
}
else
{
    <EditForm Model="typeProduct" OnValidSubmit="HandleValidSubmit" FormName="typeProductForm" id="typeProductDetail">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="mb-3">
            <label for="TypeProductName" class="form-label">Nom du type de produit</label>
            <InputText id="TypeProductName" class="form-control" @bind-Value="typeProduct.Name" />
        </div>

        <button type="submit" class="btn btn-primary">Enregistrer</button>
        @if(delete)
        {
            <button type="button" class="btn btn-danger ms-2" @onclick="DeleteTypeProduct">Supprimer</button>
        }
        else
        {
            <p> Un produit associé à ce type de produit existe. Suppresion impossible</p>
        }
        <button type="button" class="btn btn-secondary ms-2" @onclick="Retour">Annuler</button>
    </EditForm>

}

@code {
    [Parameter]
    public int? IdTypeProduct { get; set; }

    private TypeProduct typeProduct = new();
    private bool isLoading = true;
    private List<Product>? productList;
    bool delete = true;

    protected override async Task OnInitializedAsync()
    {
        var p = await dataRepository.GetByIdAsync(IdTypeProduct.Value);
        productList = await dataRepositoryProduct.GetAllAsync();
        if (p != null)
                typeProduct = p;
            else
                Navigation.NavigateTo("/typeProducts");
        foreach (Product product in productList)
        {
            if (product.Type == typeProduct.Name)
            {
                delete = false;
                break;
            }
        }
        isLoading = false;
    }

    private async Task HandleValidSubmit()
    {

        await dataRepository.UpdateAsync(typeProduct);
        Navigation.NavigateTo("/typeProducts");
    }

    private async Task DeleteTypeProduct()
    {
        await dataRepository.DeleteAsync(typeProduct.Id);
        Navigation.NavigateTo("/typeProducts");
    }

    private void Retour()
    {
        Navigation.NavigateTo("/typeProducts");
    }
}
